<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/customer_detail_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.CustomerDetailActivity">
    <ImageView
            android:layout_width="306dp"
            android:layout_height="160dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/CustomerImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="Id:"
            android:layout_width="146dp"
            android:layout_height="18dp"
            android:id="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/CustomerImage"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" tools:text="Id:"
            android:layout_marginStart="52dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="138dp"
            android:layout_height="18dp"
            android:id="@+id/CustomerId" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="20dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/CustomerImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.042"/>
    <TextView
            android:text="Status:"
            android:layout_width="146dp"
            android:layout_height="19dp"
            android:id="@+id/textView3" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
            android:text="TextView"
            android:layout_width="133dp"
            android:layout_height="17dp"
            android:id="@+id/CustomerStatus" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.218" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/CustomerId"/>
    <TextView
            android:text="TextView"
            android:layout_width="242dp"
            android:layout_height="133dp"
            android:id="@+id/CustomerDescription" android:textSize="24sp"
            android:textStyle="italic" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/CustomerStatus" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.173"/>
</android.support.constraint.ConstraintLayout>